<h1>楽曲管理</h1>

<%= form_for(@music) do |f| %>
  <% if @music.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@music.errors.count, "error") %> prohibited this music from being saved:</h2>

      <ul>
      <% @music.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    タイトル
    <%= f.text_field :title %>
  </div>
  <div class="field">
    ボーカル 
    <%= f.select :vocal, ['John', 'Paul', 'George', 'Ringo', 'John&Paul'] %>
  </div>
  <div class="field">
    ソロ
    <%= f.check_box :solo %>
  </div>
  <div class="field">
    １曲目
    <%= f.check_box :first %>
  </div>
  <div class="field">
    ラスト
    <%= f.check_box :last %>
  </div>
  <div class="field">
    ピアノ
    <%= f.check_box :piano %>
  </div>
  <div class="actions">
    <%= f.submit :type => 'submit', :name => 'regist', :value => '登録' %>
  </div>
<% end %>
